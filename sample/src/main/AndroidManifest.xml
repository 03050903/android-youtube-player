<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pierfrancescosoffritti.youtubeplayersample">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:configChanges="orientation|screenSize|keyboardHidden|smallestScreenSize|screenLayout" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".youtubePlayerLibraryExamples.basicExample.BasicExampleActivity"
            android:label="@string/basic_example"
            android:configChanges="orientation|screenSize|keyboardHidden|smallestScreenSize|screenLayout"
            android:hardwareAccelerated="true" />

        <activity
            android:name=".youtubePlayerLibraryExamples.recyclerViewExample.RecyclerViewActivity"
            android:label="@string/recycler_view_example"
            android:configChanges="orientation|screenSize|keyboardHidden|smallestScreenSize|screenLayout"
            android:hardwareAccelerated="true" />

        <activity
            android:name=".youtubePlayerLibraryExamples.viewPagerExample.ViewPagerActivity"
            android:label="@string/view_pager_example"
            android:configChanges="orientation|screenSize|keyboardHidden|smallestScreenSize|screenLayout"
            android:hardwareAccelerated="true" />

        <activity
            android:name=".youtubePlayerLibraryExamples.customUIExample.CustomUIActivity"
            android:label="@string/custom_ui_example"
            android:configChanges="orientation|screenSize|keyboardHidden|smallestScreenSize|screenLayout"
            android:hardwareAccelerated="true" />

    </application>

</manifest>